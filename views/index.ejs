<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>

    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>My amazing blog!</h1>
    <form action="/addToBlog" method="POST">
        <!-- <input type="text" placeholder="Enter item" name="ToDoItem"> -->
        <textarea name="blogItem" cols="50" rows="10">What has happened since your last post?</textarea>
        <input type="submit">
        
    </form>

    <% blogs.forEach( element => { %>
        <section>
            <h3><%= element.postDate.substr(0, 15)%>, <%= element.postDate.substr(16,8) %></h3> 
            <span class="blogActivity"> <%= element.blogPost %></span>
        </section>
    <% }) %>
</body>
</html>